@model Pie
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 shadow-sm">
                <img src="@Url.Content(Model.ImageUrl)" class="card-img-top" alt="@Model.Name">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("c")</p>
                    <p class="card-text"><strong>Description:</strong> @Model.ShortDescription</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a asp-action="AddToShoppingCart" asp-controller="ShoppingCart" asp-route-id="@Model.PieId" class="btn btn-sm btn-primary">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="mb-3">@Model.Name</h2>
            <p class="lead">@Model.LongDescription</p>
        </div>
    </div>
</div>
