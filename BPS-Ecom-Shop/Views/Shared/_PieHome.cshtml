@model Pie
@{
    ViewData["Title"] = "Details";
}

<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <img src="@Url.Content(Model.ImageUrl)" class="card-img-top" alt="...">
        <div class="card-body">
            <p class="card-text">@Model.Name - @Model.Price.ToString("c")</p>
            <p class="card-text">@Model.Price</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <a asp-action="Details" asp-controller="Pie" asp-route-id="@Model.PieId" class="btn btn-sm btn-outline-secondary">View</a>
                    <a asp-action="AddToShoppingCart" asp-controller="ShoppingCart" asp-route-id="@Model.PieId" class="btn btn-sm btn-outline-secondary">Add to Cart</a>
                </div>
            </div>
        </div>
    </div>
</div>